<div class="row">
  <h1>Sign Up</h1>
</div>

<div class="row">
  <div class="inner">
    <div class="unit col1of3 some-height"></div>
    <div class="unit col1of3">
      <%= form_for(@admin) do |f| %>
        <div class="row">
          <%= render 'shared/error_messages' %>
        </div>
        <div class="row">
          <%= f.label :name %>
          <%= f.text_field :name %>
        </div>

        <div class="row">
          <%= f.label :email %>
          <%= f.text_field :email %>
        </div>

        <div class="row">
          <%= f.label :password %>
          <%= f.password_field :password %>
        </div>

        <div class="row">
          <%= f.label :password_confirmation %>
          <%= f.password_field :password_confirmation %>
        </div>

        <div class="row">
          <%= f.submit "Create my account", class: "btn" %>
        </div>
      <% end %>
    </div>
    <div class="unit col1of3"></div>
  </div>
</div>