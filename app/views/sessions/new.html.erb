
<div class="row">
  <div class="vertical-double-inner">
    <div class="unit col1of3 some-height"></div>
    <div class="unit col1of3">
      <div class="row vertical-double-inner">
        <h1>Sign In</h1>
      </div>
      <form accept-charset="UTF-8" action="/sessions" method="post">
        <input name="authenticity_token" type="hidden" value="<%= form_authenticity_token %>">
        <div class="row vertical-half-inner">
          <label for="session_email">Email</label>
        </div>
        <div class="row">
          <input id="session_email" name="session[email]" type="text" />
        </div>
        <div class="row vertical-half-inner">
          <label for="session_password">Password</label>
        </div>
        <div>
          <input id="session_password" name="session[password]" type="password" />
        </div>
        <div class="row">
          <input class="btn btn-primary" name="commit" type="submit" value="Sign In" />
        </div>
      </form>
    </div>
    <div class="unit col1of3"></div>
  </div>
</div>