<%= form_for(@project) do |f| %>
  <%= f.label :title %>
  <%= f.text_field :title %>

  <%= f.label :description %>
  <%= f.text_area :description, size: "100x10" %>

  <%= f.fields_for :details do |df| %>
      <%= df.label :bullet %>
      <%= df.text_field :bullet %>
  <% end %>
  <%= f.submit %>
<% end %>