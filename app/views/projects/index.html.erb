<div class="projects-container">
  <% @projects.each do |project| %>
  <div class="row vertical-inner">
    <div class="row vertical-inner">
      <h2><%= project.title %></h2>
    </div>
    <div class="row vertical-inner">
      <p><%= project.description %></p>
    </div>
    <ul>
      <% project.details.each do |d| %>
      <li><%= d.bullet %></li>
      <% end %>
    </ul>
  </div>
  <% end %>
</div>