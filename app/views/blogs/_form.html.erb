<%= form_for(@blog) do |f| %>
  <div class="form-group">
    <%= f.label :title %>
    <%= f.text_field :title %>
  </div>

  <div class="form-group">
    <%= f.label :para1 %>
    <%= f.text_area :para1, size: "100x10" %>
  </div>

  <div class="form-group">
    <%= f.label :para2 %>
    <%= f.text_area :para2, size: "100x10" %>
  </div>

  <div class="form-group">
    <%= f.label :para3 %>
    <%= f.text_area :para3, size: "100x10" %>
  </div>

  <%= f.file_field :avatar %>

  <%= f.submit %>
<% end %>

