<div class="body-padding">
<div class="row">
  <div class="col-md-3">
    <div class="row inner"><h2 class="blog-title">Posts</h2></div>
    <% @blogs_all.each do |blog| %>
    <div class="row inner">
      <a href="<%= blog_path(blog.id) %>"><%= blog.title %></a>
    </div>
    <% end %>
  </div>

  <div class="col-md-8">
    <% @blogs_all[0..4].each do |blog| %>
    <div class="row">
      <div class="">
        <div class="blog-title"><%=blog.title%></div>
        <p><%= mark(blog.para1) %></p>
        <p><%= mark(blog.para2) %></p>
        <p><%= mark(blog.para3) %></p>
        <div class="row">
          <% if signed_in? %>
          <%= link_to 'edit', edit_blog_path(blog)%>
          <%= link_to 'Delete Blog', {controller: 'blogs', action: 'destroy', id: blog.id}, method: :delete %>
          <% end %>
        </div>
      </div>
    </div>
    <% end %>  
  </div>
</div>
</div>

